---
pagination:
    data: work
    size: 1
    alias: work
permalink: "/work/{{work.id | slug}}/index.html"
---
{% if work.images.promo %}
<figure>
  <img src="../images/{{ work.images.promo }}" alt="">
</figure>
{% endif %}

<p>
  {{ work.description | safe }}
</p>

{% if work.url %}
<p>
  <a href="{{ work.url }}" rel="noopener noreferrer">Check out <b>{{ work.url_label }}</b></a>
</p>
{% endif %}

{% if work.images.screenshots %}
{% for screenshot in work.images.screenshots %}
<figure>
  <img src="../images/{{ screenshot }}" alt="">
</figure>
{% endfor %}
{% endif %}

{% if work.responsibilities %}
<section>
  <header>
    <h3>Responsibilities</h3>
  </header>
  <ul>
    {% for responsibility in work.responsibilities %}
    <li>{{responsibility | safe}}</li>
    {% endfor %}
  </ul>
</section>
{% endif %}

{% if work.people %}
<section>
  <header>
    <h3>Team-mates</h3>
  </header>
  <ul>
    {% for person in work.people %}
    <li>{{person | safe}}</li>
    {% endfor %}
  </ul>
</section>
{% endif %}

<section>
  <header>
    <h3>Observations and insights</h3>
  </header>
  <ul>
    {% for insight in work.observations %}
    <li>{{insight | safe}}</li>
    {% endfor %}
  </ul>
</section>
