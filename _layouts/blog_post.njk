---
permalink: "{{ page | postUrl }}"
section: Blog
---
{%- set css %}
  {% include "css/core.css" %}
  {% include "css/post.css" %}
{% endset -%}
<!DOCTYPE html>
<html lang="en-ZA">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{{ title }} - Blog - tactile.co.za</title>
    <style>{{ css | cssmin | safe }}</style>
  </head>
  <body>
    <header>
      <h1>Blog</h1>
      <p><a href="../">Back to Recent posts</a></p>
    </header>
    <main>
      <article>
        <header>
          <h2>{{ title }}</h2>
        </header>
        {{ content | safe }}
      </article>
    </main>
    <footer>
      {% include "pagination.njk" %}
    </footer>
  </body>
</html>
