---
permalink: "{{ page | postUrl }}"
---
{%- set css %}
  {% include "css/core.css" %}
  {% include "css/post.css" %}
{% endset -%}
<!DOCTYPE html>
<html lang="en-ZA">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{{ title }} - Tactile Blog</title>
    <style>{{ css | cssmin | safe }}</style>
  </head>
  <body>
    <header>
      <h1><a href="../">Tactile Blog</a></h1>
    </header>
    <main>
      <article>
        <header>
          <h2>{{ title }}</h2>
        </header>
        {{ content | safe }}
      </article>
    </main>
    <footer>
      {% include "pagination.njk" %}
    </footer>
  </body>
</html>
